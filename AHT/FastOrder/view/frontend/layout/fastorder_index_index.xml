<?xml version="1.0"?>
<page xmlns:xsi="//www.w3.org/2001/XMLSchema-instance" layout="1column"
     xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <head>
       <title>Knockout Js Testing Page</title>
   </head>
   <body>
       <referenceBlock name="content">
           <block class="AHT\FastOrder\Block\Product" name="knockoutjs_product_block" template="product.phtml">
               <arguments>
                   <argument name="jsLayout" xsi:type="array">
                       <item name="components" xsi:type="array">
                           <item name="product" xsi:type="array">
                               <item name="component" xsi:type="string">AHT_FastOrder/js/view/product</item>
                               <item name="displayArea" xsi:type="string">product</item>
                           </item>
                       </item>
                   </argument>
               </arguments>
           </block>
       </referenceBlock>
   </body>
</page>