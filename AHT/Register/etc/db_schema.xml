<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_company" resource="default" engine="innodb" comment="Customer Company">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>

        <column xsi:type="varchar" name="organization_name" nullable="true" length="255" comment="Organization Name"/>
        <column xsi:type="varchar" name="contact_phone" nullable="true" length="255" comment="Contact Phone"/>
        <column xsi:type="varchar" name="company_type" nullable="true" length="255" comment="Company Type"/>
        
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" 
                comment="Customer ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

    </table>
    
</schema>
